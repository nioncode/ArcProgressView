<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:arc="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity"
	>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_centerInParent="true"
		>

		<RelativeLayout
			android:layout_width="150dp"
			android:layout_height="150dp"
			android:layout_marginBottom="20dp"
			>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="18%"
				android:textSize="50sp"
				android:layout_centerInParent="true"
				/>

			<com.github.nioncode.arcprogressview.ArcProgressView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				arc:radialForegroundColor="#ff0000"
				arc:radialBackgroundColor="#15000000"
				arc:radialBackgroundStrokeWidth="1dp"
				arc:radialForegroundStrokeWidth="3dp"
				arc:startAngle="-90"
				arc:initialAngle="65"
				android:layout_centerInParent="true"
				/>

		</RelativeLayout>

		<RelativeLayout
			android:layout_width="150dp"
			android:layout_height="150dp"
			android:layout_marginBottom="20dp"
			>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="18%"
				android:textSize="50sp"
				android:layout_centerInParent="true"
				/>

			<com.github.nioncode.arcprogressview.ArcProgressView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				arc:radialForegroundColor="#0000ff"
				arc:radialBackgroundColor="#a0000000"
				arc:radialBackgroundStrokeWidth="1dp"
				arc:radialForegroundStrokeWidth="3dp"
				arc:startAngle="-45"
				arc:maxAngle="270"
				arc:initialAngle="65"
				android:layout_centerInParent="true"
				/>

		</RelativeLayout>

		<RelativeLayout
			android:layout_width="150dp"
			android:layout_height="150dp"
			>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="100%"
				android:textSize="50sp"
				android:layout_centerInParent="true"
				/>

			<com.github.nioncode.arcprogressview.ArcProgressView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				arc:radialForegroundColor="#ff0000"
				arc:radialBackgroundColor="#15000000"
				arc:radialBackgroundStrokeWidth="1dp"
				arc:radialForegroundStrokeWidth="7dp"
				arc:startAngle="-90"
				arc:initialAngle="360"
				android:layout_centerInParent="true"
				/>

		</RelativeLayout>


	</LinearLayout>

</RelativeLayout>
